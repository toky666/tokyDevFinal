---
import LayoutNoHeader from "../layouts/LayoutNoHeader.astro";
import Title from "@components/atoms/Title/Title.jsx";
import Button from "@components/atoms/Button/Button.astro";
---

<script> document.addEventListener("DOMContentLoaded", () => { const backButton = document.getElementById("backButton"); if (backButton) { backButton.addEventListener("click", () => { window.history.back(); }); } }); </script>

<LayoutNoHeader>

  <section class="error">
  <div class="error__container">

    <p class="title404">404 NOT FOUND</p>
    <p class="error__message ">The page you are trying to access does not exist.</p>
    <p class="error__message">This page is under construction. Please try again later.</p>
    <img src="/img/michi404.gif" alt="logo" width="300px" height="300px"/>
    <Button content="Volver" id="backButton"/>
  </div>
  </section>
</LayoutNoHeader>

<style lang="scss">
  .error {
    width: 100%;
    min-height: 100dvh;
    display: grid;
    place-content: center;
    justify-items: center;
    background: url("/img/lluvia.gif");
    background-repeat: no-repeat;
    background-position: bottom;
    background-size: cover;
    padding: 0 1rem;
    &__container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      backdrop-filter: blur(14px);
      padding: 1rem 2rem;
      border-radius: 13px;
      background-color: rgba(0, 0, 0, 0.5);
      box-shadow: inset 0 0 0 1px rgba(102, 255, 252, 0.341);
    }
  }

  .error__message {
    font-size: 1.8rem;
    color: rgb(255, 255, 255)
  }

  .title404 {
    font-size: 4rem;
    text-align: center;
    color: rgb(255, 0, 0);
    filter: drop-shadow(0 0 14px rgb(244, 3, 3));
  }

  .error > *:not(:last-child) {
    margin-bottom: 2rem;
  }
</style>
